extends ../base/_base.pug
block variables
    - var titleHTMl = 'Giỏ hàng'
block content
    .container
        +dataBreadcrumb("Trang chủ", "Giỏ hàng")
        .row.no-gutters
            .cart__wrapper.col-8           
                +tableContent()                                              
                .alert
