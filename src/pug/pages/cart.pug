                            +no-label-input-form("ipADD","Địa chỉ", false,"Address", "Địa chỉ","")
                            .message-dialog
                                span#errosrequiredADD.errorMsg * Kh&ocirc;ng &dstrok;&#x1B0;&#x1EE3;c &dstrok;&#x1EC3; tr&#x1ED1;ng

                        .form-group 
                             +no-label-input-form("ipNote", false, false, "Note","Yêu cầu khác", "")                             
                        
                        .form-check
